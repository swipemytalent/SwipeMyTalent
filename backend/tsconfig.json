{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "build",
        "skipLibCheck": true,
        "types": [
            "@types/express",
            "jest"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "tests",
        "**/*.test.ts",
        "jest*"
    ]
}
